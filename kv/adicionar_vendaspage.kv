<AdicionarVendasPage>:
    FloatLayout:
        # Imagem do Plano de Fundo
        canvas:
            Rectangle:
                # Colocar na Tela Inteira
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Texto Selecionar Cliente
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o Cliente"
            id: label_selecione_cliente
        
        # Lista Clientes
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        # Texto Selecionar Produto
        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o Produto"
            id: label_selecione_produto
        
        # Lista Produtos
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        # Texto Data
        Label:
            id: label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: 01/01/2021"

        # Selecionar Unidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1

            # Botão Kg
            LabelButton:
                text: "kg"
                id: unidades_kg
                on_release: app.selecionar_unidade("unidades_kg")

            # Botão Unidades
            LabelButton:
                text: "unidades"
                id: unidades_unidades
                on_release: app.selecionar_unidade("unidades_unidades")

            # Botão Litros
            LabelButton:
                text: "litros"
                id: unidades_litros
                on_release: app.selecionar_unidade("unidades_litros")

        # Botão Cancelar
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("homepage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2

        # Botão Adicionar Venda
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.adicionar_venda()
            text: "Adicionar Venda"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2

        # Caixa Preço Total
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço Total (R$)"
                id: label_preco
            TextInput:
                id: preco_total
                hint_text: "Digite apenas números"
        # Caixa Quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade Total"
                id: label_quantidade
            TextInput:
                id: quantidade
                hint_text: "0"
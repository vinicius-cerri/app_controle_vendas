<ListarVendedoresPage>:
    FloatLayout:
        # Imagem do Plano de Fundo
        canvas:
            Rectangle:
                # Colocar na Tela Inteira
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Lista de Vendedores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # Barra Inferior da Tela
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12

            # Cor do Plano de Fundo
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    # Colocar na Tela Inteira
                    size: self.size
                    pos: self.pos

            # Bot√£o Voltar
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")
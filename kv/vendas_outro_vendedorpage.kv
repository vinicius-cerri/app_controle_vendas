<VendasOutroVendedorPage>:
    FloatLayout:
        # Imagem do Plano de Fundo
        canvas:
            Rectangle:
                # Colocar na Tela Inteira
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Texto Total de Vendas
        Label:
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            text: "Total de Vendas: R$1"
            id: label_total_vendas
            markup: True
            canvas.before: 
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"

        # Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # Barra Inferior da Tela
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12

            # Cor do Plano de Fundo
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    # Colocar na Tela Inteira
                    size: self.size
                    pos: self.pos
                    
            # Bot√£o Voltar
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.sair_todas_vendas("listar_vendedorespage")